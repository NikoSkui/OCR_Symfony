<header class="navbar">
  <div class="container">
    <div class="navbar-brand">
      <a class="navbar-item" href="{{ path('oc_core_home') }}">
        <img src="/img/logo/logo.png" alt="Logo">
      </a>
      <span class="navbar-burger burger" data-target="navbarMenuHeroA">
        <span></span>
        <span></span>
        <span></span>
      </span>
    </div>
    <div id="navbarMenuHeroA" class="navbar-menu">
      {%set route = app.request.attributes.get('_route') %}
      <div class="navbar-end" >
        <a class="navbar-item {% if route == 'oc_core_home' %}is-active{% endif %}" 
            href="{{ path('oc_core_home') }}">Accueil
        </a>
        <a class="navbar-item {% if route starts with 'oc_platform' %}is-active{% endif %}" 
            href="{{ path('oc_platform_home') }}">Annonces
        </a>
        <a class="navbar-item {% if route == 'oc_core_contact' %}is-active{% endif %}" 
            href="{{ path('oc_core_contact') }}">Contact
        </a>
        <span class="navbar-item">
          <a class="button is-white is-outlined" href="#">
            <span class="icon">
              <i class="fa fa-github"></i>
            </span>
            <span>Le code source</span>
          </a>
        </span>
      </div>
    </div>
  </div>
</header>