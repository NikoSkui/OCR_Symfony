<div class="card article">
  <div class="card-content">
    <div class="media">
      <div class="media-center">
          <img src="/img/logo/logo-bgw.png" class="author-image" alt="Placeholder image">
      </div>
      <div class="media-content has-text-centered">
        <p class="title article-title">{{ advert.title }}</p>
        <p class="subtitle is-6 article-subtitle">
          <a href="#">@{{ advert.author }}</a> le {{ advert.date| localizeddate('long', 'none') }}
        </p>
      </div>
    </div>
    <div class="content article-body">
      {{ advert.content|raw }}
    </div>
  </div>
  <footer class="card-footer title is-5 ">
    <a href="{{ path('oc_platform_home') }}" class="card-footer-item has-text-primary">
      <span class="icon"><i class="fa fa-angle-left"></i></span>
